<div class="checkout-container">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Course Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="<%= course.thumbnail %>" class="img-fluid rounded" alt="<%= course.title %>">
                        </div>
                        <div class="col-md-8">
                            <h5><%= course.title %></h5>
                            <p class="text-muted"><%= course.description %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="text-primary mb-0">₹<%= price %></h4>
                                <span class="badge bg-success">Lifetime Access</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4>Payment Method</h4>
                </div>
                <div class="card-body">
                    <form id="paymentForm" action="/payment/process" method="POST">
                        <input type="hidden" name="courseId" value="<%= course._id %>">
                        
                        <div class="mb-3">
                            <label class="form-label">Select Payment Method</label>
                            <div class="list-group">
                                <% paymentMethods.forEach(method => { %>
                                    <label class="list-group-item">
                                        <input class="form-check-input me-2" type="radio" name="paymentMethod" value="<%= method.id %>" required>
                                        <div class="d-flex align-items-center">
                                            <img src="<%= method.icon %>" alt="<%= method.name %>" class="me-2" style="width: 30px;">
                                            <%= method.name %>
                                        </div>
                                    </label>
                                <% }); %>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Card Number</label>
                            <input type="text" class="form-control" name="cardNumber" placeholder="1234 5678 9012 3456" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Expiry Date</label>
                                <input type="text" class="form-control" name="expiryDate" placeholder="MM/YY" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">CVV</label>
                                <input type="text" class="form-control" name="cvv" placeholder="123" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Name on Card</label>
                            <input type="text" class="form-control" name="cardName" value="<%= user.name %>" required>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">Pay ₹<%= price %></button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4>Order Summary</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Course Price</span>
                        <span>₹<%= price %></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tax (18%)</span>
                        <span>₹<%= (price * 0.18).toFixed(2) %></span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total</strong>
                        <strong>₹<%= (price * 1.18).toFixed(2) %></strong>
                    </div>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Your payment is secure and encrypted
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 